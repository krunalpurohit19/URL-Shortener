{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://url-shortener-a7ry.onrender.com/api/$1"
    },
    {
      "source": "/:shortId([a-zA-Z0-9]{7})",
      "destination": "https://url-shortener-a7ry.onrender.com/:shortId",
      "permanent": false
    },
    {
      "source": "/((?!api|_next|_static|favicon.ico).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}
