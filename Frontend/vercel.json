{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://url-shortener-a7ry.onrender.com/api/$1"
    },
    {
      "source": "/((?!api|_next|static|favicon.ico).*)",
      "destination": "/index.html"
    }
  ],
  "redirects": [
    {
      "source": "/:shortId([a-zA-Z0-9]{7,})",
      "destination": "https://url-shortener-a7ry.onrender.com/:shortId",
      "statusCode": 307
    }
  ]
}
